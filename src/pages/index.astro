  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: 'https://dashboard.trieve.ai',
        target: '_blank',
        icon: 'tabler:external-link',
      },
      {
        variant: 'secondary',
        text: 'Book a Demo',
        href: 'https://cal.com/nick.k/meet',
        target: '_blank',
        icon: 'tabler:calendar',
      },
    ]}
